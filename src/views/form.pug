extends layout

block content
 -data = data || {}

  if errors
    ul
      for error in errors
        li= error.msg

  form(action="." method="POST")
    label(for="pod") Pod:
    input(
      type="text"
      id="pod"
      name="pod"
      value=data.pod
    )
    label(for="namespace") Namespace:
    input(
      type="text"
      id="namespace"
      name="namespace"
      value=data.namespace
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )